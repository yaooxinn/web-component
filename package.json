{
  "name": "@afterburner/web-components",
  "private": true,
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun run build:vite && bun run build:types",
    "build-storybook": "storybook build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:vite": "vite build",
    "dev": "vite",
    "format": "dprint fmt './**/*.{js,ts,tsx,scss}'",
    "lint:format": "dprint check \"./**/*.{ts,js,tsx}\"",
    "lint:js": "oxlint",
    "preview": "vite preview --open",
    "storybook": "storybook dev -p 6006 --no-open",
    "test": "vitest --run",
    "typedoc": "typedoc --out ./docs/typedoc"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.15.5",
    "@mui/material": "^5.15.6",
    "@mui/styled-engine-sc": "^6.0.0-alpha.12",
    "@r2wc/react-to-web-component": "^2.0.3",
    "axios": "^1.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-to-webcomponent": "^2.0.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/blocks": "^7.6.6",
    "@storybook/cli": "^7.6.9",
    "@storybook/core-server": "^7.6.9",
    "@storybook/react": "^7.6.9",
    "@storybook/react-vite": "^7.6.9",
    "@storybook/web-components": "^7.6.6",
    "@storybook/web-components-vite": "^7.6.6",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "add": "^2.0.6",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.2.0",
    "msw": "^2.0.11",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "postcss": "^8.4.32",
    "sass": "^1.69.5",
    "storybook": "^7.6.6",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-sass-dts": "^1.3.17",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
